<% js = !@reservation.errors.empty? ?
  escape_javascript(render(partial: 'shared/errors', locals: { model: @reservation }))
  :
  "<div class='alert alert-success alert-dismissible' role='alert'> <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Your reservation was made successfully</div>".html_safe
%>
$("#reservation_result").html("<%= js %>");