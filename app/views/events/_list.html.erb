<div id="filterrific_results">
  <div class="text-center">
    <%= page_entries_info events %>
  </div>
  <table class="table table-stripped">
    <thead>
      <th class="text-center">Date</th>
      <th>Title</th>
      <th>Description</th>
      <th class="text-center">Actions</th>
    </thead>
    <tbody>
      <% events.each do |event| %>
        <tr>
          <td class="text-center"><%= l event.finalized_date, format: :short %></td>
          <td><%= event.title.titleize %></td>
          <td><%= truncate event.description, length: 50 %></td>
          <td class='text-center'>
            <div class="btn-group">
              <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= fa_icon 'cog' %> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to fa_icon('eye', text: 'Display'), event%></li>
                <li class="divider"></li>
                <li><%= link_to fa_icon('pencil', text: 'Edit'), edit_event_path(event) %></li>
                <li class="divider"></li>
                <li><%= link_to fa_icon('trash-o', text: 'Delete'), event, method: :delete, remote: true, data: { confirm: 'Are you sure?' }  %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate events, theme: 'twitter-bootstrap-3'  %>
  </div>
</div>
