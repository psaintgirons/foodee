<div id="filterrific_results">
  <div class="text-center">
    <%= page_entries_info users %>
  </div>
  <table class="table table-stripped">
    <thead>
      <th class="text-center">First Name</th>
      <th class="text-center">Last Name</th>
      <th class="text-center">Email</th>
      <th class="text-center">Profile</th>
      <th class="text-center">Actions</th>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td class='text-center'><%= user.profile.titleize %></td>
          <td class='text-center'>
            <div class="btn-group">
              <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= fa_icon 'cog' %> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to fa_icon('eye', text: 'Display'), user %></li>
                <% if can? :destroy, user %>
                  <li class="divider"></li>
                  <li><%= link_to fa_icon('trash-o', text: 'Delete'), user, method: :delete, remote: true, data: { confirm: 'Are you sure?' }  %></li>
                <% end %>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate users, theme: 'twitter-bootstrap-3'  %>
  </div>
</div>
