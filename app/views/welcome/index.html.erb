<div id="fh5co-menus" data-section="menu">
  <div class="container">
    <div class="row text-center fh5co-heading row-padded">
      <div class="col-md-8 col-md-offset-2">
        <h2 class="heading to-animate">Food Menu</h2>
        <p class="sub-heading to-animate">Eat, Drink and Have Fun.</p>
      </div>
    </div>
    <div class="row row-padded">
      <div class="col-md-6">
        <div class="fh5co-food-menu to-animate-2">
          <h2>Starters</h2>
          <ul>
            <% @starters.each do |starter| %>
              <%= menu_item starter, true %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="fh5co-food-menu to-animate-2">
          <h2 class="fh5co-dishes">Salads & Mains</h2>
          <ul>
            <% @mains.each do |main| %>
              <%= menu_item main, true %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="fh5co-food-menu to-animate-2">
          <h2 class="fh5co-drinks">Cocktails</h2>
          <ul>
            <% @drinks.each do |drink| %>
              <%= menu_item drink, true %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="fh5co-food-menu to-animate-2">
          <h2>Desserts</h2>
          <ul>
            <% @desserts.each do |dessert| %>
              <%= menu_item dessert, true %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center to-animate-2">
        <p><%= link_to 'More Food Menu', menu_path, class:"btn btn-primary btn-outline" %></p>
      </div>
    </div>
  </div>
</div>
<div id="fh5co-events" data-section="events" style="background-image: url(assets/slide_2.jpg);" data-stellar-background-ratio="0.5">
  <div class="fh5co-overlay"></div>
  <div class="container">
    <div class="row text-center fh5co-heading row-padded">
      <div class="col-md-8 col-md-offset-2 to-animate">
        <h2 class="heading">Upcoming Events</h2>
        <p class="sub-heading">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
      </div>
    </div>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4">
          <div class="fh5co-event to-animate-2">
            <h3><%= event.title.titleize %></h3>
            <span class="fh5co-event-meta"><%= l event.finalized_date, format: :short %></span>
            <p><%= event.description %></p>
            <p><a href="#" class="btn btn-primary btn-outline">Read More</a></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>