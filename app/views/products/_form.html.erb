<div class="row">
  <h1 class="page-header"><%= title %></h1>

  <div class="col-xs-12">
    <%= render 'shared/errors', model: product %>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for product do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <%= f.label :type %>
            <%= f.select :product_type, product_types, { include_blank: 'Select a type' }, { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class: 'form-control', min: 1, step: 0.01 %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <% Product::CATEGORIES.each do |category| %>
              <label class="radio-inline">
                <%= f.radio_button :category, category %>
                <%= category %>
              </label>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-primary pull-right' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
